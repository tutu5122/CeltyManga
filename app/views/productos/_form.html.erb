<%= form_with(model: producto) do |form| %>
  <% if producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
        <% producto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, class:'form-control col-md-2' %>
  </div>

  <div class="field">
    <%= form.label :total_stock , 'Stock'%>
    <%= form.number_field :total_stock, class:'form-control col-md-2' %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_field :descripcion, class:'form-control col-md-2' %>
  </div>

  <div class="field">
    <%= form.label :precio %>
    <%= form.text_field :precio, class:'form-control col-md-2' %>
  </div>

  
  <div class="field">
    <%= form.label :url %>
    <%= form.select(:url, ['1.jpg', '2.jpg', '3.jpg', '4.jpg', '5.jpg'], {}, { class: 'col-sm-2 custom-select' })%>
  </div>

   <div class="field">
    <%= form.label :genero_id %>
    <%= form.select(:genero_id, @generos, {}, { class: 'col-sm-2 custom-select'}) %>   
  </div>
  <br>
  <div class="actions">
    <%= form.submit 'Crear Producto', class:'col-sm-2 btn btn-outline-info'%>
  </div>
<% end %>
