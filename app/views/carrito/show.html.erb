<h1>Carrito#show</h1>
<p>Find me in app/views/carrito/show.html.erb</p>


<div class="card">
    <div class="card-header bg-info text-white">
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            <a href="<%= productos_path %>" class="btn btn-outline-info btn-sm pull-right">Continuar Comprando</a>
            <div class="clearfix"></div>
    </div>
    <div class="card-body">
        <%  %>
            <div class="row">
                <div class="col-xs-2 col-md-2">
                    <img class="img-responsive" src="https://via.placeholder.com/120x80" alt="prewiew">
                </div>
                <div class="col-xs-4 col-md-6">
                    <h4 class="product-name">
                        <strong><%=  %></strong>
                    </h4>
                    <h4>
                        <small><%=  %></small>
                    </h4>
                </div>
                <div class="col-xs-6 col-md-4 row">
                    <div class="col-xs-6 col-md-6 text-right" style="padding-top: 5px">
                        <h6>
                            <strong><%= %>
                             <span class="text-muted">x</span>
                            </strong>
                        </h6>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        <%=  %>
                    </div>
                    <div class="col-xs-2 col-md-2">
                    </div>
                </div>
            </div>
            <hr>
        <%  %>
    </div>
    <div class="card-footer">
        <a href="https://developer.paypal.com/" class="btn btn-success pull-right">Pay</a>
        <div class="pull-right" style="margin: 5px">
            Total: $<b><%=  %></b>
        </div>
    </div>
</div>

<h1>Carrito de compra</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Direccion</th>
      <th>Rut</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orden_compras.each do |ordenes| %>
      <tr>
        <td><%= ordenes.total %></td>
        <td><%= ordenes.direccion_despacho %></td>
        <td><%= ordenes.cliente.rut %></td>
      </tr>
    <% end %>




<br>
<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Orden de compra </th>
      <th>Productos</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detalle_compras.each do |detalle| %>
      <tr>
        <td><%= detalle.cantidad %></td>
        <td><%= detalle.orden_compra_id %></td>
        <td><%= detalle.producto.titulo %></td>
        <td><%= detalle.producto.precio %></td>
      </tr>
    <% end %>


       